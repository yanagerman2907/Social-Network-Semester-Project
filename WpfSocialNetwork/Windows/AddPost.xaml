<Window x:Class="WpfSocialNetwork.Windows.AddPost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSocialNetwork"
        mc:Ignorable="d"
        Height="400" Width="350"
        ResizeMode="NoResize" 
        MouseMove="Window_MouseMove"
        WindowStartupLocation="CenterScreen" 
        Background="#add7db"
        FontFamily="Georgia">
    <Grid>
        <Label Content="Write your post:" Margin="20,40,20,0" FontSize="25" Foreground="#7451eb"/>
        <Button Width="145" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="180,0,20,10" Content="Save" Background="#7451eb" Foreground="WhiteSmoke" FontSize="20" Click="Save_Click" Height="30"/>
        <Button Width="145" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20,0,180,10" Content="Cancel" Background="#00adbd" Foreground="WhiteSmoke" FontSize="20" Click="Cancel_Click" Height="30"/>
        <TextBox Name="Text" BorderThickness="0" Margin="20,102,19.333,45.667" AcceptsReturn="True" FontSize="22" FontStyle="Italic" TextChanged="Text_TextChanged"/>
    </Grid>
</Window>
